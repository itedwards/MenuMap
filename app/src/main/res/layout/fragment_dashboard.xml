<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCE5FF">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="#CCE5FF"/>

    <TextView
        android:id="@+id/cameraText"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Camera Translate"
        android:textStyle="bold"
        android:textSize="30sp" />

    <Button
        android:id="@+id/cameraBtn"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/take_picture"
        android:background="#62B2FF"
        android:padding="16dp"
        android:drawableBottom="@drawable/ic_notifications_black_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="#CCE5FF"/>

    <TextView
        android:id="@+id/audioText"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Audio Translate"
        android:textStyle="bold"
        android:textSize="30sp" />

    <Button
        android:id="@+id/audioBtn"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:text="Start Recording"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:background="#62B2FF"
        android:drawableBottom="@drawable/ic_mic_black_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="#CCE5FF"/>

</LinearLayout>